<script>

  function change_graph() {
    var bus_cat = document.getElementById("business").value
    var job_cat = document.getElementById("occupation").value

    if (bus_cat == "-1") {
      alert("業種を選択してください")
    }
    else if(job_cat == "-1") {
      alert("業種を選択してください")
    }
    else {
      document.location.href = "?bus=" + bus_cat + "&job=" + job_cat;
    }
  }
</script>
<h1>statistics</h1>
<p><%= link_to 'Users Index', users_path %></p>

<select id="business">
  <option value="-1" selected>--業種を選択--</option>
  <option value="0">IT企業</option>
</select>
<select id="occupation">
  <option value="-1" selected>--職種を選択--</option>
  <option value="0">エンジニア</option>
  <option value="1">総合職</option>
</select>
<button type="submit" onClick="change_graph()">OK!</button>
