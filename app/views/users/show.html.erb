<div class="container">
<h1>Users show</h1>


<%= link_to 'Users Index', users_path, :class=>'btn btn-info'%>
<%= link_to 'User Edit', edit_user_path, :class=>'btn btn-success'%>
<%= link_to 'User Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger' %>


<%= link_to 'Add Progress', new_progress_path(user_id: @user.id), :class=>'btn btn-warning'%>

<%= link_to '統計ページ', graphs_path, :class=>'btn btn-primary'%>
<h2>ユーザーデータ</h2>
<ul class="user-data list-group">
  <li class="list-group-item">Name:  <%= @user.name %></li>
  <li class="list-group-item">Sex:   <%= @user.sex %></li>
  <li class="list-group-item" class="list-group-item" class="list-group-item">Age:   <%= @user.age %></li>
  <li class="list-group-item" class="list-group-item">Univ:  <%= @user.univ %></li>
  <li class="list-group-item">Grade: <%= @user.grade %></li>
</ul>
<h2>選考進捗状況</h2>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-default">
  <tr>
    <th>Company Name</th>
    <th>Business Category</th>
    <th>Occupation Category</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @progresses.each do |progress| %>
      <tr>
        <td><%= link_to progress.company_name, progress_path(progress.id) %></td>
        <td><%= progress.business_category %></td>
        <td><%= progress.occupation_category %></td>
        <td><%= progress.status %></td>
        <td><%= link_to 'Show', progress, :class=>'btn btn-success'%></td>
        <td><%= link_to 'Edit', edit_progress_path(progress), :class=>'btn btn-primary'%></td>
        <td><%= link_to 'Destroy', progress, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger' %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>
