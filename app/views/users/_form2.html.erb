<%= form_for(@user, url:users_path) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :sex %>
    <%= select_tag :sex, options_for_select({"男性" => "male", "女性" => "female"}) %>
  </div>
  <div class="field">
    <%= f.label :age %>
    <%= f.text_field :age %>
  </div>
  <div class="field">
    <%= f.label :univ %>

    <%= select_tag :sex, options_for_select({"University_of_Oxford" => "0","California_Institute_of_Technology" => "1","Stanford_University" => "2","University_of_Cambridge" => "3","Harvard_University:" => "4",}) %>
    <%= f.text_field :univ %>
  </div>
  <div class="field">
    <%= f.label :grade %>
    <%= f.text_field :grade %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end%>
