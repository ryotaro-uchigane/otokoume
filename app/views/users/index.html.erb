<div class="container">
<h1>Users index</h1>
<div class="top_menu raw">
<%= link_to '統計ページ', graphs_path, :class=>'btn btn-primary'%>
<%= link_to '新規ユーザー作成', new_user_path, :class=>'btn btn-success'%>
</div>
<h2>検索</h2>
<%= render 'search' %>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-default">
  <tr>
    <th>Username</th>
    <th>Sex</th>
    <th>Age</th>
    <th>Univ</th>
    <th>Grade</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user_path(user.id) %></td>
        <td><%= user.sex %></td>
        <td><%= user.age %></td>
        <td><%= user.univ %></td>
        <td><%= user.grade %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>
