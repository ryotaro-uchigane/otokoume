<%= bootstrap_form_for(@user, url:user_path) do |f| %>
  <div class="field">
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.select :sex, User.sexes.keys.to_a, {}%>
  </div>
  <div class="field">
    <%= f.text_field :age %>
  </div>
  <div class="field">
    <%= f.select :univ, User.univs.keys.to_a, {} %>
  </div>
  <div class="field">
    <%= f.text_field :grade%>
  </div>
  <div class="actions">
    <%= f.submit '編集', :class=>"btn btn-success" %>
  </div>
<% end%>
